
#EXAMPLE CONFIGURATION FILE

#Instructions:
1. Copy this file to a new file named ".env"
2. Adjust the values below to match your local environment
3. NEVER commit your real .env file to version control!


# Database Configuration
DB_NAME=local_trade
DB_USER=postgres
DB_PASSWORD=postgres

# Security (JWT)
# Generate a secure HS256 secret (e.g., using openssl rand -base64 64)
JWT_SECRET=change_me_to_a_very_long_secure_random_string_for_production_use

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# S3 / MinIO Configuration
# Default credentials for local MinIO (docker-compose)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
S3_ENDPOINT=http://localhost:9000
S3_ACCESSKEY=minioadmin
S3_SECRETKEY=minioadmin
AWS_REGION=eu-central-1

# Email Service (Mailtrap)
MAILTRAP_USERNAME=your_mailtrap_username
MAILTRAP_PASSWORD=your_mailtrap_password
